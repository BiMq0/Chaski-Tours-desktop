<UserControl x:Class="chaski_tours_desk.Componentes.Clientes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chaski_tours_desk.Componentes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="Cliente_Loaded">
    <StackPanel>
        <StackPanel  Background="#FAE4BC" Margin="20">
            <Label Content="Clientes" HorizontalContentAlignment="Center" FontSize="45" FontWeight="Bold" Margin="20"/>
            <DataGrid x:Name="tbl_Clientes" AutoGenerateColumns="False" Margin="20" BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Codigo" Binding="{Binding cod_visitante}" Width="*"/>
                    <DataGridTextColumn Header="Tipo de Visitante" Binding="{Binding tipo_visitante}" Width="*"/>
                    <DataGridTextColumn Header="Fecha de Registro" Binding="{Binding fecha_registro}" Width="*"/>
                    <DataGridTextColumn Header="Activo" Binding="{Binding Activo}" Width="*" />
                    </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </StackPanel>
</UserControl>
