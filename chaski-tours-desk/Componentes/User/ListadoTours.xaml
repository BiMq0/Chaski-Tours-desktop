<UserControl x:Class="chaski_tours_desk.Componentes.User.ListadoTours"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chaski_tours_desk.Componentes.User"
             mc:Ignorable="d" 
                                      d:DesignHeight="720" d:DesignWidth="1280" Loaded="UserControl_Loaded">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel >
                <StackPanel  VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20" Orientation="Horizontal">
                    <Image Source="/Images/icono.png" Width="250"/>
                    <Image Source="/Images/titulo_blanco.png" Width="600"/>
                </StackPanel>
                <Grid Margin="0,0,0,30">
                    <Border CornerRadius="20" 
             Background="#AA1A4B32"
             Padding="2" Width="800" >
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
              Opacity="0.75" 
              BlurRadius="20" 
              ShadowDepth="4" 
              Direction="270"/>
                        </Border.Effect>
                        <TextBox x:Name="txtBuscar" 
                              Height="40"
                              Width="450"
                              Padding="10"
                              VerticalContentAlignment="Center"
                              Text="¿ B U S C A S  U N  T O U R ?"
                              BorderThickness="0"
                              Foreground="White"
                              FontWeight="Bold"
                              FontSize="15"
                              Background="Transparent" 
                              Opacity="0.8"
                              HorizontalContentAlignment="Center"
                                />
                    </Border>
                    <Border CornerRadius="15" HorizontalAlignment="Right" Width="50" Margin="0,0,115,0" Style="{StaticResource BordeBotonesUser}">
                        <Button 
                     x:Name="btnBuscar"
                     Content="🔍" 
                     Style="{StaticResource UserButtonStyle}"
                     Width="50" 
                     FontSize="20"
                     Opacity="0.8"
                     HorizontalAlignment="Left"
                     />
                    </Border>

                </Grid>


                <TextBlock Text="TODOS LOS TOURS" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Left" 
                        Margin="100,20,0,30" Foreground="{StaticResource BoliviaLightGreen}"/>





                <ListBox x:Name="CarouselListBox"
                     ItemsSource="{Binding SitiosParaBinding}"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="10"
                     HorizontalAlignment="Center">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="0,0,15,0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{DynamicResource BordeForms}"  Background="{StaticResource BoliviaDarkGreen}" ClipToBounds="True" Padding="10" Opacity="0.9" >
                                <Grid Height="300" Width="1200" HorizontalAlignment="Center" Background="{StaticResource BoliviaDarkGreen}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>


                                    <Image Source="/Images/Images_Departamentos/Beni.jpg"
                                       Stretch="UniformToFill"
                                        HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Grid.Column="1"
                                           />



                                    <StackPanel Grid.Column="0" Margin="30" VerticalAlignment="Top" >

                                        <TextBlock Text="{Binding nombre_tour}"
                                               FontSize="32"    
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               Margin="0,0,0,8"/>
                                        <TextBlock Text="DESCRIPCION"    
                                               FontSize="24"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               LineHeight="20"/>
                                        <TextBlock Text="{Binding descripcion_tour}"    
                                               FontSize="20" 
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               LineHeight="20"/>
                                        <TextBlock Text="DIAS DE DURACION"    
                                               FontSize="24"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"
                                               LineHeight="20"/>
                                        <TextBlock Text="{Binding duracion_dias}"    
                                           FontSize="20" 
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           LineHeight="20"/>



                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="20,40" HorizontalAlignment="Right">
                                        <TextBlock Text="Precio del tour: "    
                                        FontSize="24"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        TextWrapping="Wrap"
                                        TextTrimming="CharacterEllipsis"
                                        LineHeight="20"/>
                                        <TextBlock Text="{Binding costo_tour}"    
                                        FontSize="24"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        TextWrapping="Wrap"
                                        TextTrimming="CharacterEllipsis"
                                        LineHeight="20"/>

                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Border Style="{StaticResource BordeBotonesUser}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40 20 20 20" Width="150" Grid.Column="2">
                    <Button x:Name="btnVolver" Content="Volver" Style="{StaticResource UserButtonStyle}" Width="150" FontWeight="Bold" Click="btnReservar_Click"/>
                </Border>
            </StackPanel>

        </ScrollViewer>
    </Grid>
</UserControl>


