<UserControl x:Class="chaski_tours_desk.Componentes.User.VistaCategorias"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:navbar="clr-namespace:chaski_tours_desk.Componentes.User"
             mc:Ignorable="d" 
                      d:Height="720" d:Width="1280" Loaded="UserControl_Loaded">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel>
            <Grid  VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20 50" >
                <Image Source="/Images/icono.png" Width="250"/>
                <Image Source="/Images/titulo_blanco.png" Width="1000">
                    <Image.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.5" ShadowDepth="3"/>
                    </Image.Effect>
                </Image>
            </Grid>
            <navbar:navbar x:Name="navbar" HorizontalAlignment="Center" Margin="0 20 0 0"/>
           
                
            
                <StackPanel x:Name="stackMain">
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Border Style="{StaticResource BordeBotonesUser}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20">
            <Button Style="{StaticResource UserButtonStyle}" Content="Volver" x:Name="btnVolver" Click="btnVolver_Click" />
        </Border>
    </Grid>
</UserControl>
