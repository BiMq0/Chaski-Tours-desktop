<UserControl x:Class="chaski_tours_desk.Componentes.User.Landing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chaski_tours_desk.Componentes.User"
             mc:Ignorable="d" d:Width="1280" Loaded="UserControl_Loaded">

    <UserControl.Resources>


        <Style x:Key="CardSitio" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Height" Value="250"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CardCategoria" TargetType="Border">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="220"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="FontWeight" Value="UltraBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DropShadowEffect x:Key="CardShadowEffect" 
                     BlurRadius="10" 
                     ShadowDepth="3" 
                     Opacity="0.1"/>

        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!--Inicio de estilos y elementos-->
    <ScrollViewer VerticalScrollBarVisibility="Hidden">

        <StackPanel >
            <StackPanel  VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20" Orientation="Horizontal">
                <Image Source="/Images/icono.png" Width="250"/>
                <Image Source="/Images/titulo_blanco.png" Width="600"/>
            </StackPanel>
            <Grid Margin="0,0,0,30">
                <Border CornerRadius="20" 
                        Background="#AA1A4B32"
                        Padding="2" Width="800" >
                    <Border.Effect>
                        <DropShadowEffect Color="Black" 
                         Opacity="0.75" 
                         BlurRadius="20" 
                         ShadowDepth="4" 
                         Direction="270"/>
                    </Border.Effect>
                    <TextBox x:Name="txtBuscar" 
                             Height="40"
                             Width="450"
                             Padding="10"
                             VerticalContentAlignment="Center"
                             Text="¿ B U S C A S  U N  T O U R ?"
                             BorderThickness="0"
                             Foreground="White"
                             FontWeight="Bold"
                             FontSize="15"
                             Background="Transparent" 
                             Opacity="0.8"
                             HorizontalContentAlignment="Center"
                         />
                </Border>
                <Border CornerRadius="15" HorizontalAlignment="Right" Width="50" Margin="0,0,115,0" Style="{StaticResource BordeBotonesUser}">
                    <Button 
                        x:Name="btnBuscar"
                        Content="🔍" 
                        Style="{StaticResource UserButtonStyle}"
                        Width="50" 
                        FontSize="20"
                        Opacity="0.8"
                        HorizontalAlignment="Left"
                        />
                </Border>
            </Grid>







            <StackPanel x:Name="spSitios" Margin="0,60,0,0">
                <TextBlock Text="LOS SITIOS MEJOR VALORADOS" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Left" 
                        Margin="0,20,0,30" Foreground="{StaticResource BoliviaLightGreen}"/>




                <Border Style="{StaticResource CardSitio}" >
                    <Grid MouseLeftButtonDown="Grid1_MouseLeftButtonDown">

                        <Image Source="/Images/Images_Categorias/batalla.png"
                       Stretch="Fill"
                       Opacity="0.8"/>
                        <Rectangle Fill="White" Opacity="0.3"/>
                        <StackPanel VerticalAlignment="Bottom" Margin="50">
                            <TextBlock x:Name="tbx_nombresitio1"
                                        FontSize="30" 
                                        FontWeight="Bold" 
                                        Foreground="Black"/>
                            <TextBlock x:Name="tbx_descripcionsitio1"
                                        FontSize="24" 
                                        Foreground="Black"
                                        TextWrapping="Wrap" 
                                        MaxWidth="500"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Style="{StaticResource CardSitio}">
                    <Grid MouseLeftButtonDown="Grid2_MouseLeftButtonDown">

                        <Image Source="/Images/Images_Departamentos/Chuquisaca.jpg"
                           Stretch="Fill"
                           Opacity="0.8"/>
                        <Rectangle Fill="White" Opacity="0.3"/>
                        <StackPanel VerticalAlignment="Bottom" Margin="50">
                            <TextBlock x:Name="tbx_nombresitio2"
                    FontSize="30" 
                    FontWeight="Bold" 
                    Foreground="Black"/>
                            <TextBlock x:Name="tbx_descripcionsitio2"
                    FontSize="24" 
                    Foreground="Black"
                    TextWrapping="Wrap" 
                    MaxWidth="500"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>



            <StackPanel x:Name="spTours" Margin="0,60,0,0">
                <TextBlock Text="TOURS SOBRECOTIZADOS POR LOS GRINGOS" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Right" 
                       Margin="0,20,0,30" 
                       Foreground="{StaticResource BoliviaLightGreen}"/>
                <Border Style="{StaticResource CardSitio}">
                    <Grid MouseLeftButtonDown="Grid3_MouseLeftButtonDown">

                        <Image Source="/Images/Images_Departamentos/Cochabamba.png"
                           Stretch="Fill"
                           Opacity="0.8"/>
                        <Rectangle Fill="White" Opacity="0.3"/>
                        <StackPanel VerticalAlignment="Bottom" Margin="50">
                            <TextBlock x:Name="tbx_nombretour1"
                                        FontSize="30" 
                                        FontWeight="Bold" 
                                        Foreground="Black"/>
                            <TextBlock x:Name="tbx_descripciontour1"
                                        FontSize="24" 
                                        Foreground="Black"
                                        TextWrapping="Wrap" 
                                        MaxWidth="500"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Style="{StaticResource CardSitio}">
                    <Grid MouseLeftButtonDown="Grid4_MouseLeftButtonDown">

                        <Image Source="/Images/Images_Departamentos/SantaCruz.jpg"
                               Stretch="Fill"
                               Opacity="0.8"/>
                        <Rectangle Fill="White" Opacity="0.3"/>
                        <StackPanel VerticalAlignment="Bottom" Margin="50">
                            <TextBlock x:Name="tbx_nombretour2"
                                FontSize="30" 
                                FontWeight="Bold" 
                                Foreground="Black"/>
                            <TextBlock x:Name="tbx_descripciontour2"
                                FontSize="24" 
                                Foreground="Black"
                                TextWrapping="Wrap" 
                                MaxWidth="500"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            <StackPanel x:Name="spDepartamentos" Margin="0,60,0,40">
                <TextBlock Text="CATEGORÍAS" 
                          FontSize="22" 
                          FontWeight="Bold"
                          Foreground="{StaticResource BoliviaLightGreen}"
                          Margin="20,0,20,15"/>

                <Border Background="#F7F7F7" CornerRadius="12" Padding="5">
                    <Grid>
                        <ScrollViewer x:Name="categoryScrollViewer"
                                 HorizontalScrollBarVisibility="Hidden"
                                 VerticalScrollBarVisibility="Disabled"
                                 Width="460"  
                                 Height="220">

                            <ItemsControl ItemsSource="{Binding Categorias}">
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Width" Value="120"/>
                                        <Setter Property="Height" Value="220"/>
                                        <Setter Property="Margin" Value="10,5"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10"
                                                    Background="White"
                                                    Effect="{StaticResource CardShadowEffect}">
                                            <Button Style="{StaticResource TransparentButtonStyle}"
                                                        Padding="0">
                                                <StackPanel>
                                                    <Border Width="50" 
                                                               Height="50"
                                                               CornerRadius="25"
                                                               Background="#E8F5E9"
                                                               Margin="0,10,0,5"
                                                               HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding nombre_categoria, StringFormat={}{0:0}}"
                                                              FontSize="20"
                                                              FontWeight="Bold"
                                                              Foreground="#2E7D32"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                    </Border>

                                                    <TextBlock Text="{Binding nombre_categoria}"
                                                              HorizontalAlignment="Center"
                                                              TextWrapping="Wrap"
                                                              TextAlignment="Center"
                                                              FontSize="13"
                                                              FontWeight="SemiBold"
                                                              MaxWidth="100"
                                                              Margin="5,0,5,10"/>
                                                </StackPanel>
                                            </Button>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Button x:Name="btnIzquierdaCat" 
                               Content="❮"
                               Width="40"
                               Height="40"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Style="{StaticResource CircleButtonStyle}" Click="btnIzquierdaCat_Click"
                               />

                        <Button x:Name="btnDerechaCat" 
                               Content="❯"
                               Width="40"
                               Height="40"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Style="{StaticResource CircleButtonStyle}" Click="btnDerechaCat_Click"
                               />
                    </Grid>
                </Border>
            </StackPanel>
            <StackPanel x:Name="spCategorias" Margin="0,60,0,40">
                <TextBlock Text="DEPARTAMENTOS" 
                          FontSize="22" 
                          FontWeight="Bold"
                          Foreground="{StaticResource BoliviaLightGreen}"
                          Margin="20,0,20,15"/>

                <Border Background="#F7F7F7" CornerRadius="12" Padding="5">
                    <Grid>
                        <ScrollViewer x:Name="departamentoScrollViewer"
                                 HorizontalScrollBarVisibility="Hidden"
                                 VerticalScrollBarVisibility="Disabled"
                                 Width="460"  
                                 Height="220">

                            <ItemsControl ItemsSource="{Binding Categorias}">
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Width" Value="120"/>
                                        <Setter Property="Height" Value="220"/>
                                        <Setter Property="Margin" Value="10,5"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10"
                                                    Background="White"
                                                    Effect="{StaticResource CardShadowEffect}">
                                            <Button Style="{StaticResource TransparentButtonStyle}"
                                                        Padding="0">
                                                <StackPanel>
                                                    <Border Width="50" 
                                                               Height="50"
                                                               CornerRadius="25"
                                                               Background="#E8F5E9"
                                                               Margin="0,10,0,5"
                                                               HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding nombre_categoria, StringFormat={}{0:0}}"
                                                              FontSize="20"
                                                              FontWeight="Bold"
                                                              Foreground="#2E7D32"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                    </Border>

                                                    <TextBlock Text="{Binding nombre_categoria}"
                                                              HorizontalAlignment="Center"
                                                              TextWrapping="Wrap"
                                                              TextAlignment="Center"
                                                              FontSize="13"
                                                              FontWeight="SemiBold"
                                                              MaxWidth="100"
                                                              Margin="5,0,5,10"/>
                                                </StackPanel>
                                            </Button>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Button x:Name="btnIzquierdaDep" 
                               Content="❮"
                               Width="40"
                               Height="40"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Style="{StaticResource CircleButtonStyle}" Click="btnIzquierdaDep_Click"
                              />

                        <Button x:Name="btnDerechaDep" 
                               Content="❯"
                               Width="40"
                               Height="40"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Style="{StaticResource CircleButtonStyle}" Click="btnDerechaDep_Click"
                              />
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>