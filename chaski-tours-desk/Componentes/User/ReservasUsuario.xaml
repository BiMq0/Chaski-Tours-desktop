<Window x:Class="chaski_tours_desk.Componentes.User.ReservasUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chaski_tours_desk.Componentes.User"
        mc:Ignorable="d"
        Title="ReservasUsuario" Height="600" Width="1080" Background="Black" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/fondo_reservas.jpg" Stretch="UniformToFill" Grid.ColumnSpan="2" Opacity="0.7"/>
        <Border Margin="20" Grid.Column="0" Background="{StaticResource BoliviaLightGreen}" CornerRadius="12" Padding="30" >
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,-20" >
                <StackPanel>

                    <TextBlock Text="Detalle de la Reserva" 
                               FontSize="26" FontWeight="Bold" 
                               Foreground="{StaticResource BoliviaDarkGreen}" 
                               Margin="0 0 0 30"
                               TextAlignment="Center"/>


                    <StackPanel Margin="0 5">
                        <TextBlock Text="Nombre Tour" Foreground="{StaticResource BoliviaDarkGreen}" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="txtNombreTour" Foreground="ForestGreen" FontSize="18" TextWrapping="Wrap"/>
                    </StackPanel>

                    <Separator Margin="0 10"/>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Cantidad de Personas" Foreground="{StaticResource BoliviaDarkGreen}" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="txtCantidadPersonas" Foreground="ForestGreen" FontSize="18"/>
                    </StackPanel>

                    <Separator Margin="0 10"/>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Costo Total" Foreground="{StaticResource BoliviaDarkGreen}" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="txtCostoTotal" Foreground="ForestGreen" FontSize="18"/>
                    </StackPanel>

                    <Separator Margin="0 10"/>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Estado" Foreground="{StaticResource BoliviaDarkGreen}" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="txtEstado" Foreground="ForestGreen" FontSize="18"/>
                    </StackPanel>

                    <Separator Margin="0 10"/>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Fecha de Salida" Foreground="{StaticResource BoliviaDarkGreen}" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="txtFechaSalida" Foreground="ForestGreen" FontSize="18"/>
                    </StackPanel>

                    <Separator Margin="0 10"/>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Fecha de Regreso" Foreground="{StaticResource BoliviaDarkGreen}" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock x:Name="txtFechaRegreso" Foreground="ForestGreen" FontSize="18"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" >
            <Image Source="/Images/icono.png" Width="140" Height="140" Margin="0 0 0 40"/>

            <Button Content="Volver" 
                    Width="140" Height="40" 
                    FontWeight="Bold" 
                    Style="{StaticResource UserButtonStyle}"
                    Background="{StaticResource BoliviaDarkGreen}" 
                    Foreground="{StaticResource White}" 
                    Cursor="Hand" 
                    BorderThickness="0" Click="Button_Click"
                    />
        </StackPanel>

    </Grid>
</Window>
