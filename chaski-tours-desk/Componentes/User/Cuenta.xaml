<Window x:Class="chaski_tours_desk.Componentes.User.Cuenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chaski_tours_desk.Componentes.User"
        mc:Ignorable="d" Background="#1B2A1F"  Height="700" Width="1080"         WindowState="Maximized"

        Title="Cuenta">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Width="250" Margin="0 0 20 0">
            <Border Background="{StaticResource BoliviaDarkGreen}" Style="{StaticResource BordeForms}" Padding="10">
                <StackPanel HorizontalAlignment="Center" >
                    <Ellipse Width="120" Height="120" Fill="Gray" Stroke="White" StrokeThickness="2"/>
                    <TextBlock Text="Turista" Style="{StaticResource SubtitleTXB}" 
                               Foreground="{StaticResource BoliviaLightGreen}"
                               Margin="0 20 0 0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Column="1">
            
            <Border Style="{StaticResource BordeForms}" Background="{StaticResource BoliviaDarkGreen}" Padding="20" Margin="0 0 0 10">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="MI PERFIL"
                               Style="{StaticResource SubtitleTXB}"
                               Foreground="{StaticResource BoliviaLightGreen}"
                               HorizontalAlignment="Center" Margin="0 0 0 20"/>

                    <WrapPanel HorizontalAlignment="Center" Margin="0 0 0 10">
                        <Border Background="{StaticResource White}" CornerRadius="15" Padding="15" Margin="10" Width="300" Style="{StaticResource BordeForms}">
                            <StackPanel>
                                <TextBlock Text="Nombre" Style="{StaticResource SubtitleTXB}" Foreground="{StaticResource BoliviaDarkGreen}"/>
                                <TextBlock x:Name="txtNombre" Style="{StaticResource TextoTXB}" Foreground="{StaticResource BoliviaGreen}"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource White}" CornerRadius="15" Padding="15" Margin="10" Width="300" Style="{StaticResource BordeForms}">
                            <StackPanel>
                                <TextBlock Text="Correo" Style="{StaticResource SubtitleTXB}" Foreground="{StaticResource BoliviaDarkGreen}"/>
                                <TextBlock x:Name="txtCorreo" Style="{StaticResource TextoTXB}" Foreground="{StaticResource BoliviaGreen}"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <WrapPanel HorizontalAlignment="Center" Margin="0 0 0 10">
                        <Border Background="{StaticResource White}" CornerRadius="15" Padding="15" Margin="10" Width="300" Style="{StaticResource BordeForms}">
                            <StackPanel>
                                <TextBlock Text="Documento" Style="{StaticResource SubtitleTXB}" Foreground="{StaticResource BoliviaDarkGreen}"/>
                                <TextBlock x:Name="txtDocumento" Style="{StaticResource TextoTXB}" Foreground="{StaticResource BoliviaGreen}"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource White}" CornerRadius="15" Padding="15" Margin="10" Width="300" Style="{StaticResource BordeForms}">
                            <StackPanel>
                                <TextBlock Text="Teléfono" Style="{StaticResource SubtitleTXB}" Foreground="{StaticResource BoliviaDarkGreen}"/>
                                <TextBlock x:Name="txtTelefono" Style="{StaticResource TextoTXB}" Foreground="{StaticResource BoliviaGreen}"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <WrapPanel HorizontalAlignment="Center">
                        <Border Background="{StaticResource White}" CornerRadius="15" Padding="15" Margin="10" Width="300" Style="{StaticResource BordeForms}">
                            <StackPanel >
                                <TextBlock Text="Fecha de nacimiento" Style="{StaticResource SubtitleTXB}" Foreground="{StaticResource BoliviaDarkGreen}"/>
                                <TextBlock x:Name="txtFechaNac" Style="{StaticResource TextoTXB}" Foreground="{StaticResource BoliviaGreen}"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <GroupBox Header="Historial de Reservas"
          FontWeight="Bold"
          Foreground="{StaticResource BoliviaLightGreen}"
          FontSize="18"
          Margin="0">

                <DataGrid x:Name="listaReservas"
              AutoGenerateColumns="False"
              HeadersVisibility="Column"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              Margin="10"
              RowBackground="{StaticResource White}"
              HorizontalAlignment="Stretch"
              ColumnHeaderHeight="40"
              RowHeight="40"
              FontSize="16"
              SelectionMode="Single"
              SelectionUnit="FullRow">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource BoliviaLightGreen}" />
                            <Setter Property="Foreground" Value="{StaticResource BoliviaDarkGreen}"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Reserva a" Binding="{Binding id_salida}" Width="*"/>
                        <DataGridTextColumn Header="Cantidad de personas" Binding="{Binding cantidad_personas}" Width="*"/>
                        <DataGridTextColumn Header="Costo total" 
                                 Binding="{Binding costo_total_reserva, StringFormat={}{0:C}}" 
                                 Width="*" />
                        <DataGridTextColumn Header="Estado" Binding="{Binding estado}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
