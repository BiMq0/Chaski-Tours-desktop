<Window x:Class="chaski_tours_desk.Componentes.Admin.ReservasAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chaski_tours_desk.Componentes.Admin"
        mc:Ignorable="d"
        Title="ReservasAdmin"  Height="720" Width="1280" Loaded="datos">
    <Grid  Background="#FAE4BC">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Editar Reserva" Style="{StaticResource Titulo}" HorizontalAlignment="Center" MinWidth="400"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0"  Source="/Images/icono.png" Grid.Column="0" />
            <Grid Grid.Column="1">

                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="450" >
                    <StackPanel>
                        <Label Content="ID" 
                               FontSize="30"
                               HorizontalAlignment="Center"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="7" Width="500">
                            
                            <TextBox x:Name="txt_id" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontSize="25"
                                Height="45" 
                                Padding="10,0"
                                Background="White"
                                BorderThickness="0"
                                Foreground="#FF5A4A3A"
                                VerticalContentAlignment="Center" 
                                IsReadOnly="True" 
                                Margin="10,10"/>
                            
                            
                        </Border>

                        <Label Content="VISITANTE" 
                                FontSize="30"
                                HorizontalAlignment="Center"
                                Grid.Row="1"
                                Grid.Column="0"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="7" Width="500">
                            <ComboBox x:Name="cmb_codvisitante" 
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  FontSize="25"
                                  Height="45" 
                                  Padding="10,0"
                                  Background="White"
                                  BorderThickness="0"
                                  Foreground="#FF5A4A3A"
                                  VerticalContentAlignment="Center" 
                                  IsReadOnly="True" 
                                  Margin="10,10"
                                  Width="500"/>
                        </Border>

                        <Label Content="ALOJAMIENTO" 
                                FontSize="30"
                                HorizontalAlignment="Center"
                                Grid.Row="2"
                                Grid.Column="0"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="7" Width="500">
                            <ComboBox x:Name="cmb_idalojamiento" 
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      FontSize="25"
                                      Height="45" 
                                      Padding="10,0"
                                      Background="White"
                                      BorderThickness="0"
                                      Foreground="#FF5A4A3A"
                                      VerticalContentAlignment="Center" 
                                      IsReadOnly="True" 
                                      Margin="10,10"
                                      Width="500"/>
                        </Border>

                        <Label Content="ID SALIDA:" 
                                FontSize="30"
                                HorizontalAlignment="Center"
                                Grid.Row="3"
                                Grid.Column="0"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="7" Width="500">
                            <ComboBox x:Name="cmb_idsalida" 
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  FontSize="25"
                                  Height="45" 
                                  Padding="10,0"
                                  Background="White"
                                  BorderThickness="0"
                                  Foreground="#FF5A4A3A"
                                  VerticalContentAlignment="Center" 
                                  IsReadOnly="True" 
                                  Margin="10,10"
                                  Width="500"/>
                        </Border>

                        <Label Content="CANTIDAD DE PERSONAS:" 
                                FontSize="30"
                                HorizontalAlignment="Center"
                                Grid.Row="4"
                                Grid.Column="0"/>
                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="7" Width="500">
                            <TextBox x:Name="txt_cantidad" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontSize="25"
                                Height="45" 
                                Padding="10,0"
                                Background="White"
                                BorderThickness="0"
                                Foreground="#FF5A4A3A"
                                VerticalContentAlignment="Center"
                                Margin="10,10"
                                     Width="500"/>
                        </Border>

                        <Label Content="COSTO TOTAL:" 
                                FontSize="30"
                                HorizontalAlignment="Center"
                                Grid.Row="5"
                                Grid.Column="0"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="7" Width="500">
                            <TextBox x:Name="txt_costototal" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontSize="25"
                                Height="45" 
                                Padding="10,0"
                                Background="White"
                                BorderThickness="0"
                                Foreground="#FF5A4A3A"
                                VerticalContentAlignment="Center"  
                                Margin="10,10"
                                     Width="500"/>
                        </Border>

                        <Label Content="ESTADO:" 
                                FontSize="30"
                                HorizontalAlignment="Center"
                                Grid.Row="6"
                                Grid.Column="0"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="7" Width="500">
                            <ComboBox x:Name="cmb_estados" 
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      FontSize="25"
                                      Height="45" 
                                      Padding="10,0"
                                      Background="White"
                                      BorderThickness="0"
                                      Foreground="#FF5A4A3A"
                                      VerticalContentAlignment="Center" 
                                      IsReadOnly="True" 
                                      Margin="10,10"
                                      Width="500"/>
                        </Border>

                        <Label Content="FECHA DE RESERVACION:" 
                                FontSize="30"
                                HorizontalAlignment="Center"
                                Grid.Row="7"
                                Grid.Column="0"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="7" Width="500">
                            <TextBox x:Name="txt_fechadereservacion" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 FontSize="25"
                                Height="45" 
                                Padding="10,0"
                                Background="White"
                                BorderThickness="0"
                                Foreground="#FF5A4A3A"
                                VerticalContentAlignment="Center"
                                Margin="10,10"
                                     Width="500"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>


            <Grid Grid.Row="9" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource BordeBotones}" HorizontalAlignment="Center" Width="197">
                    <Button x:Name="Cerrar" HorizontalAlignment="Center" Content="Cancelar" Style="{StaticResource SecondaryButtonStyle}" Height="50" VerticalAlignment="Top" Click="Cerrar_Click"  />
                </Border>

                <Border Grid.Column="1" Style="{StaticResource BordeBotones}" HorizontalAlignment="Center" Width="197">
                    <Button x:Name="Actualizar" HorizontalAlignment="Center" Content="Actualizar" Style="{StaticResource SecondaryButtonStyle}" Click="Actualizar_Click"  />
                </Border>

                <Border Grid.Column="2" Style="{StaticResource BordeBotones}" HorizontalAlignment="Center" Width="197">
                    <Button x:Name="Eliminar" HorizontalAlignment="Center" Content="Eliminar" Style="{StaticResource SecondaryButtonStyle}" Click="Eliminar_Click"  />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
