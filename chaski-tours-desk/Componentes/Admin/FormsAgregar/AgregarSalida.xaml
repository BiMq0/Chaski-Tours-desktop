<Window x:Class="chaski_tours_desk.Componentes.Admin.FormsAgregar.AgregarSalida"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chaski_tours_desk.Componentes.Admin.FormsInfo"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Información de Salida" 
        Height="720" 
        Width="1280"
        Background="{StaticResource BoliviaLightRed}">

    <Grid Margin="20">
        <Border Style="{StaticResource BordeForms}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Encabezado con información de la salida -->
                    <Border Background="#D32F2F" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Información de Salida" 
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="Bold"/>
                            <TextBlock x:Name="txbIdSalida" 
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- ID oculto para operaciones -->
                    <TextBlock x:Name="hiddenId" Visibility="Hidden"/>

                    <!-- Sección de fechas -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Fecha de Salida" 
                                       Style="{StaticResource SubtitleTXB}"/>
                            <DatePicker x:Name="dpFechaSalida" 
                                        
                                       />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Fecha de Regreso" 
                                       Style="{StaticResource SubtitleTXB}"/>
                            <DatePicker x:Name="dpFechaRegreso" 
                                        
                                />
                        </StackPanel>
                    </Grid>

                    <!-- Información del tour -->
                    <Border BorderBrush="#F44336" BorderThickness="0,1" Padding="0,10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Tour Asociado" 
                                       Style="{StaticResource SubtitleTXB}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>


                                <TextBlock Text="ID del Tour:" 
           Style="{StaticResource TextoTXB}"
           VerticalAlignment="Center"
           Margin="0,0,10,0"/>

                                <ComboBox x:Name="cmbTours" Style="{StaticResource Selector}" IsEnabled="True">
                                    
                                </ComboBox>


                            </Grid>
                        </StackPanel>
                    </Border>

                    

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border x:Name="brdEditar" Style="{StaticResource BordeBotonesUser}">
                            <Button x:Name="btnGuardarSalida" 
                                    Content="Guardar" 
                                    Style="{StaticResource UserButtonStyle}"
                           
                                    Cursor="Hand" Click="btnGuardarSalida_Click"/>
                        </Border>

                        <Border x:Name="brdBtnVolver" Style="{StaticResource BordeBotones}">
                            <Button x:Name="btnVolver"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="btnCerrar_Click"
                                    Content="Volver"
                                    Cursor="Hand"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>