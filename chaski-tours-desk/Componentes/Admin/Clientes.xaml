<UserControl x:Class="chaski_tours_desk.Componentes.Admin.Clientes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chaski_tours_desk.Componentes"
             mc:Ignorable="d" 
             d:DesignWidth="1280" d:Height="720" Loaded="Cliente_Loaded">
    <Grid  Background="#FAE4BC" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Content="Clientes" HorizontalContentAlignment="Center" FontSize="45" FontWeight="Bold" Margin="20"/>
        
        
            <ScrollViewer Margin="20 10" Grid.Row="1">
                <DataGrid x:Name="tbl_Clientes">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Codigo" Binding="{Binding cod_visitante}" Width="*"/>
                        <DataGridTextColumn Header="Tipo de Visitante" Binding="{Binding tipo_visitante}" Width="*"/>
                        <DataGridTextColumn Header="Fecha de Registro" Binding="{Binding fecha_registro}" Width="*"/>
                        <DataGridTextColumn Header="Activo" Binding="{Binding Activo}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        
        
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Añadir" Style="{StaticResource TertiaryButtonStyle}"/>
                <Button Content="Editar"
            Style="{StaticResource SecondaryButtonStyle}"/>
                <Button Content="Eliminar" Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
</UserControl>
