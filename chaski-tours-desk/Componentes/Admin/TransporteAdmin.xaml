<Window x:Class="chaski_tours_desk.Componentes.Admin.TransporteAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chaski_tours_desk.Componentes.Admin"
        mc:Ignorable="d"
        Title="TransporteAdmin" Height="720" Width="1280">
    <Grid  Background="#FAE4BC">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Content="Editar Transporte" Style="{StaticResource Titulo}" HorizontalAlignment="Center" MinWidth="400"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0"  Source="/Images/icono.png" Grid.Column="0" />
            <Grid Grid.Column="1">

                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="450" >
                    <StackPanel>
                        <Label Content="ID:" 
                               FontSize="30"
                               HorizontalAlignment="Center"/>
                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="0" Width="500">
                            <TextBox x:Name="txt_id"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     FontSize="25"
                                    Height="45" 
                                    Padding="10,0"
                                    Background="White"
                                    BorderThickness="0"
                                    Foreground="#FF5A4A3A"
                                    VerticalContentAlignment="Center" 
                                    IsReadOnly="True" 
                                    Margin="10,10"/>
                        </Border>

                        <Label Content="MATRICULA:" 
                                FontSize="30"
                                HorizontalAlignment="Center"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="1" Width="500">
                            <TextBox x:Name="txt_matricula" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="25"
                                    Height="45" 
                                    Padding="10,0"
                                    Background="White"
                                    BorderThickness="0"
                                    Foreground="#FF5A4A3A"
                                    VerticalContentAlignment="Center"
                                     Margin="10,10"
                                     Width="500"/>
                        </Border>

                        <Label Content="MARCA:" 
                                FontSize="30"
                                HorizontalAlignment="Center"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="2" Width="500">
                            <TextBox x:Name="txt_marca" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="25"
                                    Height="45" 
                                    Padding="10,0"
                                    Background="White"
                                    BorderThickness="0"
                                    Foreground="#FF5A4A3A"
                                    VerticalContentAlignment="Center"
                                     Margin="10,10"
                                     Width="500"/>
                        </Border>

                        <Label Content="MODELO:" 
                                FontSize="30"
                                HorizontalAlignment="Center"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="3" Width="500">
                            <TextBox x:Name="txt_modelo" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="25"
                                    Height="45" 
                                    Padding="10,0"
                                    Background="White"
                                    BorderThickness="0"
                                    Foreground="#FF5A4A3A"
                                    VerticalContentAlignment="Center"
                                    Margin="10,10"
                                     Width="500"/>
                        </Border>

                        <Label Content="CAPACIDAD:" 
                                FontSize="30"
                                HorizontalAlignment="Center"
                                Grid.Row="4"
                                Grid.Column="0"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="4" Width="500">
                            <TextBox x:Name="txt_capacidad" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="25"
                                    Height="45" 
                                    Padding="10,0"
                                    Background="White"
                                    BorderThickness="0"
                                    Foreground="#FF5A4A3A"
                                    VerticalContentAlignment="Center"
                                     Margin="10,10"
                                     Width="500"/>
                        </Border>

                        <Label Content="AÑO:" 
                                FontSize="30"
                                HorizontalAlignment="Center"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="5" Width="500">
                            <TextBox x:Name="txt_anio" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="25"
                                    Height="45" 
                                    Padding="10,0"
                                    Background="White"
                                    BorderThickness="0"
                                    Foreground="#FF5A4A3A"
                                    VerticalContentAlignment="Center"
                                    Margin="10,10"
                                    Width="500"/>
                        </Border>

                        <Label Content="DISPONIBLE:" 
                                FontSize="30"
                                HorizontalAlignment="Center"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="6" Width="500">
                            <TextBox x:Name="txt_disponible" 
                                     HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="25"
                                    Height="45" 
                                    Padding="10,0"
                                    Background="White"
                                    BorderThickness="0"
                                    Foreground="#FF5A4A3A"
                                    VerticalContentAlignment="Center"
                                    Margin="10,10"
                                     Width="500"/>
                        </Border>

                        <Label Content="ACTIVO:" 
                                FontSize="30"
                                HorizontalAlignment="Center"/>

                        <Border Grid.Column="2" Style="{StaticResource BordeBusqueda}" HorizontalAlignment="Center" Grid.Row="7" Width="500">
                            <TextBox x:Name="txt_activo" 
                                     HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="25"
                                    Height="45" 
                                    Padding="10,0"
                                    Background="White"
                                    BorderThickness="0"
                                    Foreground="#FF5A4A3A"
                                    VerticalContentAlignment="Center"
                                    Margin="10,10"
                                     Width="500"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>


            <Grid Grid.Row="9" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource BordeBotones}" HorizontalAlignment="Center" Width="197">
                    <Button x:Name="Cerrar" HorizontalAlignment="Center" Content="Cancelar" Style="{StaticResource SecondaryButtonStyle}" Height="50" VerticalAlignment="Top" Click="Cerrar_Click"  />
                </Border>

                <Border Grid.Column="1" Style="{StaticResource BordeBotones}" HorizontalAlignment="Center" Width="197">
                    <Button x:Name="Actualizar" HorizontalAlignment="Center" Content="Actualizar" Style="{StaticResource SecondaryButtonStyle}" Click="Actualizar_Click"  />
                </Border>

                <Border Grid.Column="2" Style="{StaticResource BordeBotones}" HorizontalAlignment="Center" Width="197">
                    <Button x:Name="Eliminar" HorizontalAlignment="Center" Content="Eliminar" Style="{StaticResource SecondaryButtonStyle}" Click="Eliminar_Click"  />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
