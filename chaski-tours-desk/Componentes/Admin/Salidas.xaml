<UserControl x:Class="chaski_tours_desk.Componentes.Admin.Salidas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chaski_tours_desk.Componentes.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="{StaticResource GeneralBackground}" Margin="20">
        <Grid Margin="40" x:Name="grilla">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>

                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="1" Grid.ColumnSpan="5" Style="{StaticResource BordeGeneral}">
                <TextBlock x:Name="mes"  Style="{StaticResource TituloTXB}" Text=""/>
            </Border>

            <Button x:Name="atras" 
                    Background="Transparent"
                    Foreground="Black"
                    Content="&lt;" FontSize="60" BorderBrush="Transparent" />

            <Button x:Name="adelante" Grid.Column="6"  Background="Transparent"
Foreground="Black" Content="&gt;" FontSize="60" BorderBrush="Transparent" BorderThickness="0"/>
            

        </Grid>
    </StackPanel>
</UserControl>
