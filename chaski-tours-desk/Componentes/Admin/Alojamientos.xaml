<UserControl x:Class="chaski_tours_desk.Componentes.Admin.Alojamientos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chaski_tours_desk.Componentes"
             mc:Ignorable="d" 
             d:DesignWidth="800" Loaded="Alojamiento_Loaded">
    <StackPanel  Background="#FAE4BC" Margin="20">
        <Label Content="Alojamientos" HorizontalContentAlignment="Center" FontSize="45" FontWeight="Bold" Margin="20"/>
        <ScrollViewer Margin="20 10" Height="420">
            <DataGrid x:Name="tbl_Alojamientos">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding nombre_aloj}" Width="250"/>
                    <DataGridTextColumn Header="Estrellas" Binding="{Binding nro_estrellas}" Width="*"/>
                    <DataGridTextColumn Header="Habitaciones" Binding="{Binding nro_habitaciones}" Width="*"/>
                    <DataGridTextColumn Header="Activo" Binding="{Binding Activo}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Añadir" Style="{StaticResource TertiaryButtonStyle}"/>
            <Button Content="Editar"
    Style="{StaticResource SecondaryButtonStyle}"/>
            <Button Content="Eliminar" Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
