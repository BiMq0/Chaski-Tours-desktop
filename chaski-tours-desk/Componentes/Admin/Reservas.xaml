<UserControl x:Class="chaski_tours_desk.Componentes.Admin.Reservas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chaski_tours_desk.Componentes"
             mc:Ignorable="d" 
 d:DesignWidth="800" Loaded="Reserva_Loaded">
    <StackPanel  Background="#FAE4BC" Margin="20">
        <Label Content="Reservas" HorizontalContentAlignment="Center" FontSize="45" FontWeight="Bold" Margin="20"/>
        <ScrollViewer Margin="20 10" Height="420">
            <DataGrid x:Name="tbl_Reserva">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding id_reserva}" Width="*"/>
                    <DataGridTextColumn Header="Código" Binding="{Binding cod_visitante}" Width="*"/>
                    <DataGridTextColumn Header="Alojamiento" Binding="{Binding id_alojamiento}" Width="*"/>
                    <DataGridTextColumn Header="Salida" Binding="{Binding id_salida}" Width="*"/>
                    <DataGridTextColumn Header="Cantidad Personas" Binding="{Binding cantidad_personas}" Width="200"/>
                    <DataGridTextColumn Header="Costo Total" Binding="{Binding costo_total_reserva}" Width="*"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding estado}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Añadir" Style="{StaticResource TertiaryButtonStyle}"/>
            <Button Content="Editar"
Style="{StaticResource SecondaryButtonStyle}"/>
            <Button Content="Eliminar" Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </StackPanel>

</UserControl>
