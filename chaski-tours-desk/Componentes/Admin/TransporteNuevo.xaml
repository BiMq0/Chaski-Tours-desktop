<Window x:Class="chaski_tours_desk.Componentes.Admin.TransporteNuevo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chaski_tours_desk.Componentes.Admin"
        mc:Ignorable="d"
        Title="TransporteNuevo" Height="720" Width="1280">
    <Grid  Background="#FAE4BC">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Ingresar Nuevo Transporte" Style="{StaticResource Titulo}" HorizontalAlignment="Center" MinWidth="400"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            

            <Label Content="MATRICULA:" 
     FontSize="30"
     HorizontalAlignment="Center"
     Grid.Row="0"
     Grid.Column="0"/>
            <TextBox x:Name="txt_matricula" 
     Grid.Row="0"
     Grid.Column="1"
     Height="45" 
     Padding="10,0"
     Background="White"
     BorderThickness="0"
     Foreground="#FF5A4A3A"
     FontSize="15"
     VerticalContentAlignment="Center"
                     Margin="10,10"/>

            <Label Content="MARCA:" 
     FontSize="30"
     HorizontalAlignment="Center"
     Grid.Row="1"
     Grid.Column="0"/>
            <TextBox x:Name="txt_marca" 
     Grid.Row="1"
     Grid.Column="1"
     Height="45" 
     Padding="10,0"
     Background="White"
     BorderThickness="0"
     Foreground="#FF5A4A3A"
     FontSize="15"
     VerticalContentAlignment="Center"
                     Margin="10,10"/>

            <Label Content="CAPACIDAD:" 
     FontSize="30"
     HorizontalAlignment="Center"
     Grid.Row="2"
     Grid.Column="0"/>
            <TextBox x:Name="txt_capacidad" 
     Grid.Row="2"
     Grid.Column="1"
     Height="45" 
     Padding="10,0"
     Background="White"
     BorderThickness="0"
     Foreground="#FF5A4A3A"
     FontSize="15"
     VerticalContentAlignment="Center"
                     Margin="10,10"/>

            <Label Content="AÑO:" 
     FontSize="30"
     HorizontalAlignment="Center"
     Grid.Row="3"
     Grid.Column="0"/>
            <TextBox x:Name="txt_anio" 
     Grid.Row="3"
     Grid.Column="1"
     Height="45" 
     Padding="10,0"
     Background="White"
     BorderThickness="0"
     Foreground="#FF5A4A3A"
     FontSize="15"
     VerticalContentAlignment="Center"
                     Margin="10,10"/>

            <Label Content="DISPONIBLE:" 
     FontSize="30"
     HorizontalAlignment="Center"
     Grid.Row="4"
     Grid.Column="0"/>
            <TextBox x:Name="txt_disponible" 
     Grid.Row="4"
     Grid.Column="1"
     Height="45" 
     Padding="10,0"
     Background="White"
     BorderThickness="0"
     Foreground="#FF5A4A3A"
     FontSize="15"
     VerticalContentAlignment="Center"
                     Margin="10,10"/>

            
            

            <Grid Grid.Row="9" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource BordeBotones}" HorizontalAlignment="Center" Width="197">
                    <Button x:Name="Cerrar" HorizontalAlignment="Center" Content="Cancelar" Style="{StaticResource SecondaryButtonStyle}" Height="50" VerticalAlignment="Top" Click="Cerrar_Click"  />
                </Border>

                <Border Grid.Column="2" Style="{StaticResource BordeBotones}" HorizontalAlignment="Center" Width="197">
                    <Button x:Name="Enviar" HorizontalAlignment="Center" Content="Enviar" Style="{StaticResource SecondaryButtonStyle}" Click="Enviar_Click"  />
                </Border>

            </Grid>






        </Grid>


    </Grid>
</Window>
