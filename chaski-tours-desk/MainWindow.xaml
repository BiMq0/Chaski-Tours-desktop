<Window x:Class="chaski_tours_desk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chaski_tours_desk"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Border Width="320" Height="360" 
            CornerRadius="15" 
            BorderThickness="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" 
              Color="#FF7D7D7D" 
              Opacity="0.3" 
              BlurRadius="15"
              Direction="270"/>
            </Border.Effect>

            <StackPanel Orientation="Horizontal">

                <StackPanel>

                </StackPanel>

                <StackPanel 
                    Background="#FFF5EDE0"
                    VerticalAlignment="Center" 
      HorizontalAlignment="Center" Margin="0, 10" Width="240">
                    <TextBlock 
          Text="Iniciar Sesión" 
          FontSize="24" 
          FontWeight="SemiBold"
          Foreground="#FF6D5C4D"
          HorizontalAlignment="Center"
          Margin="0,0,0,20"/>
                    <TextBlock Text="Usuario" 
                   Foreground="#FF6D5C4D"
                   Margin="5,5,5,0"/>
                    <TextBox x:Name="txtUsuario" 
                 Height="35" 
                 Padding="10,0"
                 VerticalAlignment="Center"
                 Background="#FFFDFAF5"
                 BorderBrush="#FFD3C9B8"
                 BorderThickness="1"
                 Foreground="#FF5A4A3A"
                 FontSize="15"
                VerticalContentAlignment="Center"/>

                    <TextBlock Text="Email" 
   Foreground="#FF6D5C4D"
   Margin="5,15,5,0"/>
                    <TextBox x:Name="txtEmail" 
 Height="35" 
 Padding="10,0"
 VerticalAlignment="Center"
 Background="#FFFDFAF5"
 BorderBrush="#FFD3C9B8"
 BorderThickness="1"
 Foreground="#FF5A4A3A"
 FontSize="15"
VerticalContentAlignment="Center"/>
                    <TextBlock Text="Contraseña" 
                   Foreground="#FF6D5C4D"
                   Margin="5,15,5,0"/>
                    <PasswordBox x:Name="txtPassword" 
             Height="35" 
             Padding="10,0"
                   VerticalContentAlignment="Center"
                     FontSize="15"
             Background="#FFFDFAF5"
             BorderBrush="#FFD3C9B8"
             BorderThickness="1"/>

                    <Border CornerRadius="15" Width="120"  Height="50" Margin="0,25,0,0" Background="#E3D3C9">
                        <Button x:Name="btnLogin" 
                Content="Ingresar"
            
                    
                    Width="120" 
                    Height="50" 
                Background="Transparent"
                BorderThickness="0"
                Foreground="#FF5A4A3A"
                FontWeight="Medium"
                Cursor="Hand">
                        </Button>
                    </Border>
                    <TextBlock Text="¿Tienes una cuenta? Inicia Sesión" 
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0"
                   Foreground="#FF8A7866"
                   TextDecorations="Underline"/>
                </StackPanel>
            </StackPanel>

        </Border>
    </Grid>
</Window>
